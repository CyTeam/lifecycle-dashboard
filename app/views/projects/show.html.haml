%table.table.table-striped
  %tr
    %th Title
    %td= @project.title
  %tr
    %th Project manager
    %td
      = @project.project_manager
      %br
      = mail_to @project.project_manager_email
  %tr
    %th Repository
    %td= @project.repository
  %tr
    %th Hosts
    %td= render :partial => 'hosts/host', :collection => @project.hosts

  %tr
    %th Project source state
    %td= put_project_source_state(@project.ruby_project_source, @project.rails_project_source, @project.json_project_source)
  %tr
    %th Project overall state
    %td

.form-actions
  = link_to 'Edit', edit_project_path(@project), :class => 'btn'
  = link_to 'List', projects_path, :class => 'btn'
